{
  "name": "basilisk-lsp",
  "displayName": "Basilisk C Language Support",
  "description": "Language Server Protocol support for Basilisk C (CFD framework)",
  "version": "0.1.0",
  "author": "QCC-LSP Contributors",
  "license": "MIT",
  "publisher": "basilisk-cfd",
  "repository": {
    "type": "git",
    "url": "https://github.com/VatsalSy/qcc-lsp"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "basilisk",
    "cfd",
    "computational fluid dynamics",
    "qcc",
    "c",
    "lsp"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:basilisk"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "basilisk",
        "aliases": [
          "Basilisk C",
          "basilisk"
        ],
        "extensions": [
          ".c",
          ".h"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "basilisk",
        "scopeName": "source.basilisk",
        "path": "./syntaxes/basilisk.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Basilisk C",
      "properties": {
        "basilisk.qccPath": {
          "type": "string",
          "default": "qcc",
          "description": "Path to the qcc compiler"
        },
        "basilisk.basiliskPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Basilisk installation directory (BASILISK environment variable)"
        },
        "basilisk.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable compilation diagnostics"
        },
        "basilisk.diagnosticsOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run diagnostics on file save"
        },
        "basilisk.diagnosticsOnType": {
          "type": "boolean",
          "default": false,
          "description": "Run diagnostics while typing (may be slow)"
        },
        "basilisk.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of problems reported per file"
        },
        "basilisk.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    },
    "commands": [
      {
        "command": "basilisk.compile",
        "title": "Basilisk: Compile Current File"
      },
      {
        "command": "basilisk.compileAndRun",
        "title": "Basilisk: Compile and Run Current File"
      },
      {
        "command": "basilisk.insertEvent",
        "title": "Basilisk: Insert Event Block"
      },
      {
        "command": "basilisk.insertForeach",
        "title": "Basilisk: Insert Foreach Loop"
      }
    ],
    "snippets": [
      {
        "language": "basilisk",
        "path": "./snippets/basilisk.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:server && npm run compile:client",
    "compile:server": "cd server && npm run compile",
    "compile:client": "cd client && npm run compile",
    "watch": "concurrently \"cd server && npm run watch\" \"cd client && npm run watch\"",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
